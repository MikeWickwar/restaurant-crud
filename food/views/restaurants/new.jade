extends ../layout 

block content 

  div.container
    h1 New Restaurant
    form(action='/restaurants' method='post')
      div.form-group
        label(for="Name") Name
        input.form-control(type="text" id="name" name='name' placeholder="Name")
      div.form-group
        label(for="title") Location
        input.form-control(type="text" id="location" name='location' placeholder="City")
      div.form-group
        select(id="staters" name="staters")
          each state in states
            option(value= state)= state
            
        

                
  
