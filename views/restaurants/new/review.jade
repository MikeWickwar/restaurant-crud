extends ../../layout 

block content 

  div.header 
    h1.titl.new New Review
  div.ftitl New Review
  div.container2
    form(action='/restaurants/#{idNum}/review' method='post')
      div.form-group
        label(for="Name") Name
        input.form-control(type="text" id="name" name='name' placeholder="Name")
      div.form-group
        label(for="date") Date
        input.form-control(type="date" id="date" name='date' placeholder="date")
      div.form-group
        label(for="rating") Rating
          input(type="radio" name="rating" value="1" checked)
          input(type="radio" name="rating" value="2")
          input(type="radio" name="rating" value="3")
          input(type="radio" name="rating" value="4")
          input(type="radio" name="rating" value="5")
      div.form-group
        lable(for="review")
          textarea(rows= "4" cols= "30" name="review" id="review" placeholder="Review here...")
      div.btns
        button.subR(type="submit") Submit
        button.canR(type="submit") Cancel
        
